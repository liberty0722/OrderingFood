/* pages/cart/cart.wxss */

.cart-page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 240rpx;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #FF6B35;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 购物车内容 */
.cart-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.cart-header-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.cart-header-clear {
  font-size: 26rpx;
  color: #999;
}

/* 购物车列表 */
.cart-list {
  flex: 1;
  padding: 16rpx 24rpx;
}

.cart-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.cart-item-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #FFE0D0, #FFB088);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.cart-item-emoji {
  font-size: 56rpx;
}

.cart-item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.cart-item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.cart-item-price {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
}

.cart-item-controls {
  display: flex;
  align-items: center;
}

.reduce-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #FF6B35;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.reduce-btn text {
  color: #FF6B35;
  font-size: 32rpx;
  line-height: 1;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #FF6B35;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn text {
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
}

.item-count {
  min-width: 48rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.cart-item-subtotal {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 自定义菜品卡片 */
.cart-item-custom {
  border: 2rpx solid #A5D6A7;
}

/* 结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.checkout-info {
  display: flex;
  align-items: baseline;
}

.checkout-label {
  font-size: 28rpx;
  color: #666;
}

.checkout-price {
  font-size: 40rpx;
  color: #FF6B35;
  font-weight: bold;
}

.checkout-btn {
  width: 220rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #FF6B35;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
